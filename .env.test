# 测试环境配置
NODE_ENV=test

# LDIMS API 配置 - 测试环境
LDIMS_API_BASE_URL=http://localhost:3001
LDIMS_API_VERSION=v1
LDIMS_API_TIMEOUT=15000
LDIMS_API_RETRY_COUNT=1

# MCP 服务器配置
MCP_SERVER_NAME=ldims-document-mcp-test
MCP_SERVER_VERSION=1.0.0

# 日志配置 - 测试环境
LOG_LEVEL=error
LOG_FORMAT=text
LOG_FILE=logs/test/mcp-service.log

# 错误处理配置 - 测试环境
ERROR_DETAILED=true
ERROR_STACK_TRACE=true
ERROR_RETRY_DELAY=500
ERROR_MAX_RETRIES=1