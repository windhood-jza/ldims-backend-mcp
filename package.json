{
  "name": "@ldims/mcp-service",
  "version": "1.0.0",
  "description": "LDIMS Model Context Protocol (MCP) Service - 为LDIMS文档管理系统提供MCP接口服务",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "directories": {
    "doc": "docs",
    "test": "tests",
    "lib": "src"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "dev:watch": "tsx watch --clear-screen=false src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src tests --ext .ts",
    "lint:fix": "eslint src tests --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "prestart": "npm run build",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "ldims",
    "document-management",
    "typescript",
    "express",
    "api"
  ],
  "author": {
    "name": "LDIMS Development Team",
    "email": "dev@ldims.com"
  },
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ldims/backend_mcp.git"
  },
  "bugs": {
    "url": "https://github.com/ldims/backend_mcp/issues"
  },
  "homepage": "https://github.com/ldims/backend_mcp#readme",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.10.1",
    "zod": "^3.23.8",
    "zod-to-json-schema": "^3.24.1",
    "express": "^5.0.1",
    "cors": "^2.8.5",
    "mysql2": "^3.6.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/node": "^22.0.2",
    "@types/express": "^5.0.0",
    "@types/cors": "^2.8.17",
    "typescript": "^5.5.4",
    "tsx": "^4.16.5",
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.12",
    "ts-jest": "^29.2.4",
    "eslint": "^9.8.0",
    "@eslint/js": "^9.8.0",
    "typescript-eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.5"
  }
}
