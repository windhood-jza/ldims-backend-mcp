{
  "name": "@ldims/mcp-service",
  "version": "1.0.0",
  "type": "module",
  "description": "LDIMS Model Context Protocol (MCP) Service - 为LDIMS文档管理系统提供MCP接口服务",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "directories": {
    "doc": "docs",
    "test": "tests",
    "lib": "src"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "start": "node dist/index.js",
    "start:mcp": "node dist/index.js",
    "start:http": "node dist/http-server.js",
    "dev": "tsx src/index.ts",
    "dev:watch": "tsx watch --clear-screen=false src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "echo 'Formatting disabled'",
    "format:check": "echo 'Format check disabled'",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "prestart": "npm run build",
    "prestart:mcp": "npm run build",
    "type-check": "tsc --noEmit",
    "quality": "node scripts/code-quality.js",
    "quality:fix": "npm run lint:fix",
    "pre-commit": "npm run type-check",
    "analyze": "npm run quality",
    "config:check": "node -e \"console.log('Config check not implemented yet')\"",
    "health:check": "node -e \"console.log('Health check not implemented yet')\"",
    "test:connection": "node -e \"console.log('Connection test not implemented yet')\"",
    "memory:profile": "node --inspect dist/index.js",
    "env:info": "node -e \"console.log('Node:', process.version); console.log('Platform:', process.platform); console.log('Arch:', process.arch);\"",
    "config:export": "node -e \"console.log('Config export not implemented yet')\"",
    "restart": "npm run build && npm start",
    "docs:serve": "echo 'Documentation server not implemented yet'"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "ldims",
    "document-management",
    "typescript",
    "express",
    "api"
  ],
  "author": {
    "name": "LDIMS Development Team",
    "email": "dev@ldims.com"
  },
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ldims/backend_mcp.git"
  },
  "bugs": {
    "url": "https://github.com/ldims/backend_mcp/issues"
  },
  "homepage": "https://github.com/ldims/backend_mcp#readme",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.10.1",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "mysql2": "^3.6.0",
    "node-fetch": "^3.3.2",
    "zod": "^3.23.8",
    "zod-to-json-schema": "^3.24.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.8.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.0.2",
    "eslint": "^9.8.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.2.4",
    "tsx": "^4.16.5",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.0.0"
  }
}
