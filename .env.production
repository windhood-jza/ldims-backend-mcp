# 生产环境配置
NODE_ENV=production

# LDIMS API 配置
LDIMS_API_BASE_URL=https://api.ldims.com
LDIMS_API_VERSION=v1
LDIMS_AUTH_TOKEN=your_production_token_here
LDIMS_API_TIMEOUT=30000
LDIMS_API_RETRY_COUNT=3

# MCP 服务器配置
MCP_SERVER_NAME=ldims-document-mcp
MCP_SERVER_VERSION=1.0.0

# 日志配置 - 生产环境
LOG_LEVEL=warn
LOG_FORMAT=json
LOG_FILE=logs/prod/mcp-service.log

# 错误处理配置 - 生产环境
ERROR_DETAILED=false
ERROR_STACK_TRACE=false
ERROR_RETRY_DELAY=2000
ERROR_MAX_RETRIES=5