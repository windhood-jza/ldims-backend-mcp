# 开发环境配置
NODE_ENV=development

# LDIMS API 配置
LDIMS_API_BASE_URL=http://localhost:3000
LDIMS_API_VERSION=v1
LDIMS_API_TIMEOUT=30000
LDIMS_API_RETRY_COUNT=3

# MCP 服务器配置
MCP_SERVER_NAME=ldims-document-mcp-dev
MCP_SERVER_VERSION=1.0.0

# 日志配置 - 开发环境
LOG_LEVEL=debug
LOG_FORMAT=text
LOG_FILE=logs/dev/mcp-service.log

# 错误处理配置 - 开发环境
ERROR_DETAILED=true
ERROR_STACK_TRACE=true
ERROR_RETRY_DELAY=1000
ERROR_MAX_RETRIES=3